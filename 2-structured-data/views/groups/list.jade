extends ../base-groups.jade

block content
  h3 Groups

  a(href="/groups/add", class='btn btn-success btn-sm')
    i.glyphicon.glyphicon-plus
    span  Add group

  each group in groups
    .media
      a(href="/groups/#{group.id}")
        .media-body
          h4= group.name
          p= group.description
          p= group.version

  if !groups.length
    p No groups found.

  if nextPageToken
    nav
      ul.pager
        li
          a(href="?pageToken=#{encodeURIComponent(nextPageToken)}") More
