extends ../base-msgs.jade

block content
  h3 Msgs

  each msg in msgs
    .media
      a(href="/msgs/#{msg.id}")
        .media-body
          h4= msg.title
          p= msg.sendTime
          p= msg.createdById

  if !msgs.length
    p No msgs found.

  if nextPageToken
    nav
      ul.pager
        li
          a(href="?pageToken=#{encodeURIComponent(nextPageToken)}") More
