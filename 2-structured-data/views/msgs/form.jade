// [START form]
extends ../base-msgs.jade

block content
  h3 #{action} msg
  form(method="POST")
    .form-group
      label(for="title") Title
      input.form-control(type="text", name="title", id="title", value=msg.title)
    .form-group
      label(for="text") Text
      input.form-control(type="text", name="text", id="text", value=msg.text)
    .form-group
      label(for="sendTime") Date Send
      input.form-control(type="text", name="sendTime", id="sendTime", value=msg.sendTime)
    .form-group
      label(for="createdById") createdById
      input.form-control(type="text", name="createdById", id="createdById", value=msg.createdById)
    .form-group
      label(for="tag") Tag
      input.form-control(type="text", name="tag", id="tag", value=msg.tag)
    .form-group
    button.btn.btn-success(type="submit") Save

// [END form]
