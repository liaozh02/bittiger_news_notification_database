// [START form]
extends ../base-users.jade

block content
  h3 #{action} user
  form(method="POST")
    .form-group
      label(for="email") Email
      input.form-control(type="text", name="email", id="email", value=user.email)
    .form-group
      label(for="password") Password
      input.form-control(type="text", name="password", id="password", value=user.password)
    .form-group
    button.btn.btn-success(type="submit") Save

// [END form]
