extends ../base-users.jade

block content
  h3 User
    small

  .btn-group
    a(href="/users/#{user.email}/edit", class='btn btn-primary btn-sm')
      i.glyphicon.glyphicon-edit
      span  Edit user
    a(href="/users/#{user.email}/delete", class='btn btn-danger btn-sm')
      i.glyphicon.glyphicon-trash
      span  Delete user

  .media
    .media-body
      p= user.email
      p= user.password
